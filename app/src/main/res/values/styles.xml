<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/os_regular</item>
        <item name="android:windowBackground">@color/backgroundLayoutColor</item>
    </style>

    <style name="AppThemeNight" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:windowLightStatusBar" tools:targetApi="23">false</item>

        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/os_regular</item>
        <item name="android:windowBackground">@color/backgroundLayoutColor</item>
    </style>

    <style name="AppTheme.Toolbar" parent="ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/textDarkColor</item>
        <item name="android:colorBackground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorAccent</item>
        <item name="android:background">@color/backgroundCardColor</item>
    </style>

    <style name="AppTheme.CardView" parent="CardView">
        <item name="cardUseCompatPadding">false</item>
        <item name="cardCornerRadius">@dimen/cardview_radius</item>
        <item name="cardElevation">@dimen/cardview_elevation</item>
        <item name="cardMaxElevation">@dimen/cardview_elevation</item>
        <item name="cardBackgroundColor">@color/backgroundCardColor</item>
        <item name="android:layout_margin">7dp</item>
    </style>

    <style name="AppTheme.Title" parent="Widget.AppCompat.TextView">
        <item name="android:fontFamily">@font/os_semi_bold</item>
        <item name="android:textColor">@color/titleColor</item>
    </style>
    <style name="AppTheme.RecyclerViewVertical">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginLeft">15dp</item>
        <item name="android:layout_marginRight">15dp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:paddingBottom">7dp</item>
        <item name="android:clipToPadding">false</item>
    </style>
</resources>
